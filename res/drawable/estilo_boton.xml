<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/White" android:startColor="@color/White" />

            <stroke android:width="3dp" android:color="@color/LemonChiffon" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/White" android:startColor="@color/White" />

            <stroke android:width="3dp" android:color="@color/LemonChiffon" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/DarkRed" android:startColor="@color/White" />

            <stroke android:width="1dp" android:color="@color/LavenderBlush" />

            <corners android:radius="3dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>

</selector>